<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xq.androidfaster" >

    <application>

        <service android:name="com.xq.androidfaster.util.tools.MessengerUtils$ServerService">
            <intent-filter>
                <action android:name="${applicationId}.messenger" />
            </intent-filter>
        </service>

        <activity
            android:name=".util.tools.PermissionUtils$PermissionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:multiprocess="true"
            android:theme="@style/TranslucentActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
    </application>

</manifest>
